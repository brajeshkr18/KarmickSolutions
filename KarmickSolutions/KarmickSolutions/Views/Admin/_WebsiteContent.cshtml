@model PagedList.IPagedList<DemoModel.ViewModel.SubMainMenuViewModel>
@using PagedList.Mvc;
@{
    Layout = null;
}


<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>MenuName</th>
            <th>IsActive</th>
            <th>MenuText</th>
            <th>Main MenuId</th>
            <th>Menu Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.SubMainMenuViewModel entity in Model)
        {
        <tr>
            <td>@entity.MenuName</td>
            <td>@entity.IsActive</td>
            <td>@entity.MenuText.ToString().Substring(0, 2) ..Read more </td>
            <td>@entity.MainMenuId</td>
            <td>@entity.MenuDescription</td>
            <td>
                <a class="btn btn-outline-info btn-xs linkbutton" 
                   href="@Url.Action("AddWebsiteContent", "Admin"
                    ,new {data=entity.Id})" name="edit"><i class="fa fa-edit"></i> Edit</a>&nbsp;

            </td>
            
        </tr>
        }
    </tbody>
    <tfoot>
        @*<tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Start date</th>
            <th>Salary</th>
        </tr>*@
    </tfoot>

</table>

<script src="~/AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>