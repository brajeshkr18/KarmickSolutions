@model PagedList.IPagedList<DemoModel.ViewModel.AlbumViewModel>
@using PagedList.Mvc;
@{
    Layout = null;
}


<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>AlbumName</th>
            <th>IsActive</th>
            <th>MenuText</th>
            @*<th>Main MenuId</th>*@
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.AlbumViewModel entity in Model)
        {
        <tr>
            <td>@entity.AlbumName</td>
            <td>@entity.IsActive</td>
            <td><img src="@entity.AlbumImage" style="width: 150px;"/></td>
            @*<td>@entity.id</td>*@
           
            <td>
                <a class="btn btn-outline-info btn-xs linkbutton"
                   href="@Url.Action("AddAlbum", "Admin"
                    ,new {data=entity.id})" name="edit"><i class="fa fa-edit"></i> Edit</a>&nbsp;

            </td>
            
        </tr>
        }
    </tbody>
    <tfoot>
       
    </tfoot>

</table>

@*<script src="../../AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>*@
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>