@model PagedList.IPagedList<DemoModel.ViewModel.GalleryViewModel>
@using PagedList.Mvc;
@{
    Layout = null;
}

<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image Category</th>
            <th>Title</th>
            <th>Image Text</th>
            <th>IsActive</th>
            <th>Image</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.GalleryViewModel entity in Model)
        {
            <tr>
                <td>@entity.id</td>
                <td>@entity.AlbumName</td>
                <th>@entity.Title</th>
                <td>@entity.GalleryName</td>
                <td>
                    @if (@entity.IsActive)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Deleted</span>
                    }</td>
                    <td><img src="@entity.GalleryPath" style="width: 150px;" /></td>
                    <td>
                        <a class="btn btn-outline-info btn-xs linkbutton"
                           href="@Url.Action("AddGallery", "Admin"
                    ,new {data=entity.id})" name="edit"><i class="fa fa-edit"></i>Edit</a>&nbsp;
                        @if (@entity.IsActive)
                        {
                            <a class="btn btn-outline-info btn-xs linkbutton"
                               href="@Url.Action("DeleteGalleryImage", "Admin"
                    ,new {data=entity.id})" name="edit"><i class="fas fa-trash"></i>Delete</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-info btn-xs linkbutton"
                               href="@Url.Action("DeleteGalleryImage", "Admin"
                    ,new {data=entity.id})" name="edit"><i class="fas fa-toggle-on"></i>Activate</a>
                        }



                    </td>
                    </tr>
                }
        </tbody>
        <tfoot>
            @*<tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Office</th>
                    <th>Age</th>
                    <th>Start date</th>
                    <th>Salary</th>
                </tr>*@
        </tfoot>

    </table>

@*<script src="~/AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>*@
