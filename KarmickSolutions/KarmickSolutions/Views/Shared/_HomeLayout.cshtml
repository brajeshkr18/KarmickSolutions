@using KarmickSolutions.Web.Helper;
<!DOCTYPE html>

<html>
<head>
    <title>KarmickSolutions  </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="KarmickSolutions " />
    <script type="application/x-javascript"> 
    addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="../../Assets/css/bootstrap.css" type="text/css" rel="stylesheet" media="all">
    <link href="../../Assets/css/style.css" type="text/css" rel="stylesheet" media="all">
    <link href="../../Assets/css/font-awesome.css" rel="stylesheet"> <!-- font-awesome icons -->
    <link rel="stylesheet" href="../../Assets/css/smoothbox.css" type='text/css' media="all" />
    <!-- //Custom Theme files -->
    <!-- js -->
    <script src="../../Assets/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!-- web-fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i,900,900i" rel="stylesheet">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- //web-fonts -->
</head>
<body>
    <!-- banner -->
    <div class="banner">
        <!-- header -->
        <div class="header">
            <div class="container">
                <div class="col-md-6">
                    <div class="logo">
                        <h1>  <a href="@Url.Action("index", "Home")"><img src="/Assets/images/logoindianlotus.png" style=" height: 3%;width: 33%;"></a></h1>
                    </div>
                </div>
                <div class="col-md-6">
                    @if (!UserAuthenticate.IsAuthenticated)
                    {
                        <div class="menu">
                            <a href="#" class="navicon"></a>
                            <div class="toggle">
                                <ul class="toggle-menu">
                                    <li><a href="@Url.Action("index", "Home")" class="active"> Home</a></li>
                                    <li><a href="@Url.Action("About", "Home")"> About</a></li>
                                    <li><a href="@Url.Action("Gallery", "Home")"> Gallery</a></li>
                                    <li><a href="@Url.Action("Item", "Home")"> Menu</a></li>
                                    <li><a href="@Url.Action("contact", "Home")"> Contact Us</a></li>
                                    @if (!UserAuthenticate.IsAuthenticated)
                                    {
                                        <li><a href="#LoginModel" data-toggle="modal"> Login</a></li>
                                    }
                                </ul>
                            </div>
                        </div>}
                    else
                    {
                        <div class="menu">
                            <a href="#" class="navicon"></a>
                            <div class="toggle">
                                <ul class="toggle-menu">
                                    <li><a href="@Url.Action("index", "Home")" class="active"> Home</a></li>
                                    <li><a href="@Url.Action("About", "Home")"> About</a></li>
                                    <li><a href="@Url.Action("Gallery", "Home")"> Gallery</a></li>
                                    <li><a href="@Url.Action("Item", "Home")"> Menu</a></li>
                                    <li><a href="@Url.Action("contact", "Home")"> Contact Us</a></li>
                                    <li><a href="@Url.Action("MyOrder", "Home")"> My Order</a></li>
                                    <li><a href="@Url.Action("MyAddresses", "Home")">My Addresses</a></li>
                                    <li><a href="@Url.Action("MyCart", "Home")">My Cart</a></li>
                                    <li><a href="@Url.Action("LogOff", "Account")">Log Out</a></li>
                                </ul>
                            </div>
                        </div>
                    }

                    <div class="social-w3licon" style="background: red;">
                        <a href="#" class="social-button twitter"><i class="fa fa-twitter"></i></a>
                        <a href="#"
                           target="_blank" class="social-button facebook"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="social-button google"><i class="fa fa-google-plus"></i></a>
                        <a href="#" class="social-button dribbble"><i class="fa fa-dribbble"></i></a>
                    </div>
                    @*}*@
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <!-- //header -->
        <!-- banner-text -->
        <div class="banner-text w3labout-bnr">
            <div class="container">
                <h3><a href="@Url.Action("Login", "Account")">Home</a> / @ViewBag.Title</h3>
            </div>
        </div>
        <!-- //banner-text -->
    </div>
    @RenderBody()

    <!-- footer -->
    
    <!-- //footer -->
    <!-- modal-about -->
    
    
    <div class="modal bnr-modal fade" id="ForgotPasswordModel" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body modal-spa">

                    <div class="login-model-popup">

                        <div class="cuisine">
                            <span class="glyphicon glyphicon-user txtName" aria-hidden="true"></span>
                            <input type="text" id="txtForgotEmail" name="txtForgotEmail" placeholder="Email / Phone" required="" class="txtName">
                        </div>
                        <div class="clearfix"> </div>
                        <div class="alert alert-success agileits hide" role="alert" id="spanSuccessLogin" style="margin-top: 20px;">
                            <strong>Well done!</strong> You successfully read this important alert message.
                        </div>
                        <div class="clearfix"> </div>

                        <div class="">
                            <div style="text-align: center;color: red;text-transform: uppercase;">
                                Dont have account ?
                                <a href="@Url.Action("Register", "Account")" data-toggle="modal"> Register Here </a>
                            </div>

                            <input type="button" id="btn_Forgot" value="Submit">
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- //modal-about -->
    <!-- menu-js -->
    <script>
        $('.navicon').on('click', function (e) {
            e.preventDefault();
            $(this).toggleClass('navicon--active');
            $('.toggle').toggleClass('toggle--active');
        });
    </script>
    <!-- //menu-js -->
    <!-- jarallax -->
    @*<script src="../../Assets/js/SmoothScroll.min.js"></script>*@
    <script src="../../Assets/js/jarallax.js"></script>
    <script type="text/javascript">
        /* init Jarallax */
        $('.jarallax').jarallax({
            speed: 0.5,
            imgWidth: 1366,
            imgHeight: 768
        })
    </script>
    <!-- //jarallax -->
    <!-- start-smooth-scrolling -->
    <script type="text/javascript" src="../../Assets/js/move-top.js"></script>
    <script type="text/javascript" src="../../Assets/js/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();

                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <!-- //end-smooth-scrolling -->
    <!-- smooth-scrolling-of-move-up -->
    <script type="text/javascript">
        $(document).ready(function () {
          

            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <!-- //smooth-scrolling-of-move-up -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="../../Assets/js/bootstrap.js"></script>
    <script src="~/Assets/ApplicationJs/Home.js"></script>
